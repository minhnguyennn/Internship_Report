<%= form_with(model: customer) do |form| %>
	<% if customer.errors.any? %>
		<div style="color: red">
			<h2><%= pluralize(customer.errors.count, "error") %> rohibited this customer from being saved:</h2>

			<ul>
				<% customer.errors.each do |error| %>
					<li>
						<%= error.full_message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>
<div class="mb-3">
	<div>
		<%= form.label :name, style: "display: block", class: "form-label" %>
		<%= form.text_field :name %>
	</div>
</div>

<div class="mb-3">
	<div>
		<%= form.label :age, style: "display: block", class: "form-label" %>
		<%= form.text_field :age %>
	</div>
</div>

	<div>
		<%= form.submit 'Submit', class: "btn btn-primary mt-1" %>
	</div>
<% end %>