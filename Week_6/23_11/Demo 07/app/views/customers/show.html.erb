<%= render "customer", customer: @customer %>

<div class="mt-4">
  <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-primary mr-2" %>
  <%= link_to "Back to customers", customers_path, class: "btn btn-secondary mr-2" %>

  <%= button_to "Destroy this customer", customer_path(@customer), method: :delete, class: "btn btn-danger" %>
</div>