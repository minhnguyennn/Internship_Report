<div class="col-md-6">
  <%= form_with(model: post, class: "form form-horizontal") do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.rich_text_area :content %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
</div>