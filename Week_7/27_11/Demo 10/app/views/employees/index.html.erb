<div class="set-center flex-column" style = "height: auto;">
  <h1> Employees </h1>

  <!--Search Form-->
  <%= render 'search_form' %>

  <br>

  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>

  <!-- Employee Table -->
  <div>
    <%= render "employee_table", employee: @employees %>
  </div>
  <div class="d-flex">
    <%= button_to "Add New Employee", new_employee_path, method: :get ,class:"btn-warning border-0 rounded-pill shadow p-3 m-3" %>
  </div>
  <div class="d-flex">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>